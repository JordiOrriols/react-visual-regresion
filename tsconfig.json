{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "jsx": "react",
        "declaration": true,
        "rootDir": "./src",
        "outDir": "./dist",
        "removeComments": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "noUnusedLocals": true,
        "noImplicitReturns": true,
        "esModuleInterop": true
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/test/*"]
}